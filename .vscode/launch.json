{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Flask",
            "type": "python",
            "request": "launch",
            "stopOnEntry": false,
            "program": "${workspaceRoot}/backend/app.py",
            "env": {
                "FLASK_APP": "${workspaceRoot}/backend/app.py",
                "PYTHONPATH": "${workspaceFolder}${pathSeparator}${env:PYTHONPATH}",
            },
            "args": [
                "run"
            ],
            "envFile": "${workspaceFolder}/.env",
            "debugOptions": [
                "RedirectOutput"
            ]
        }
    ]
}